@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="container">
        <div class="card p-5 mt-5 w-50 mx-auto shadow">
            <div class="text-center">
                <h5 >Task Management System</h5>
                <i class="lead">Login Screen</i>
            </div>
            <form asp-controller="Account" asp-action="Login" method="post" class="form-floating mt-3">
                <div class="form-floating mb-3">
                    <input type="text" class="form-control" id="username" name="Username" placeholder="">
                    <label for="username">Username</label>
                </div>
                <div class="form-floating mb-3">
                    <input type="password" class="form-control" id="password" name="Password" placeholder="">
                    <label for="password">Password</label>
                </div>
                <div class="d-grid gap-2">
                    <button class="btn btn-lg btn-primary" type="submit">Login</button>
                    <a class="btn btn-lg btn-danger" href="#" >Register</a>
                </div>
            </form>
        </div>
      
    </div>
</body> 
</html>