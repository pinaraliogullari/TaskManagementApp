@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="container">
        <div class="card p-5 mt-5 w-50 mx-auto shadow">
            <div class="text-center">
                <h5>Task Management System</h5>
                <i class="lead">Register Screen</i>
            </div>
            <form class="form-floating mt-3">
                <div class="form-floating mb-3">
                    <input type="text" class="form-control" id="name" placeholder="">
                    <label for="name">Name</label>
                </div>
                <div class="form-floating mb-3">
                    <input type="text" class="form-control" id="surname" placeholder="">
                    <label for="surname">Surname</label>
                </div>
                <div class="form-floating mb-3">
                    <input type="text" class="form-control" id="username" placeholder="">
                    <label for="username">Username</label>
                </div>
                <div class="form-floating mb-3">
                    <input type="password" class="form-control" id="password" placeholder="">
                    <label for="password">Password</label>
                </div>
                <div class="form-floating mb-3">
                    <input type="password" class="form-control" id="ConfirmPassword" placeholder="">
                    <label for="confirmPassword">Password Again</label>
                </div>
                <div class="d-grid gap-2">
                   
                    <button class="btn btn-lg btn-danger" type="submit" >Register</button>
                    <a class="btn btn-lg btn-primary" href="#">Back to Login Screen</a>
                </div>
            </form>
        </div>

    </div>
</body>
</html>