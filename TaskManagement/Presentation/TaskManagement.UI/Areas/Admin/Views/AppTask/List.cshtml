@{
    ViewBag.Title = "Task Screen";
}
@model List<AppTaskListDto>

<a asp-area="Admin" asp-controller="AppTask" asp-action="Create">Create</a>
<table class="table table-sm mt-2">
    <thead>
        <tr>

            <th scope="col">Task</th>
            <th scope="col">Description</th>
            <th scope="col">Priority Definition</th>
            <th scope="col">Task Statu</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @if (Model?.Count > 0)
        {
            @foreach (var item in Model)
            {
                <tr>

                    <td>@item.Title</td>
                    <td>@item.Description</td>
                    <td>@item.PriorityDefinition</td>
                    <td>@(item.State?"Completed":"Not Completed")</td>
                    <td>
                        <a asp-area="Admin" asp-controller="AppTask" asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Update</a>
                        <a asp-area="Admin" asp-controller="AppTask" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure want to delete?')">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5">No task found.</td>
            </tr>
        }
    </tbody>
</table>