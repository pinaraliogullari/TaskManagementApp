@{
    ViewBag.Title = "Priority Definition Screen";
}
@model List<PriorityListDto>

<table class="table table-sm">
    <thead>
        <tr>

            <th scope="col">Definition</th>
            <th scope="col">Operation</th>
        </tr>
    </thead>
    <tbody>
        @if (Model?.Count > 0)
        {
            @foreach (var item in Model)
            {
                <tr>

                    <td>@item.Definition</td>
                    <td>
                        <a asp-area="Admin" asp-controller="Priority" asp-action="Update" asp-route-id="@item.Id">Update</a>
                        <a asp-area="Admin" asp-controller="Priority" asp-action="Delete" asp-route-id="@item.Id" onclick="return confirm('Are you sure want to delete?')">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="2">No priority status found.</td>
            </tr>
        }
    </tbody>
</table>